<form action="" method="post">
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input
      type="text"
      class="form-control"
      id="name"
      name="name"
      value="<%= product.name %>"
    />
  </div>
  <div class="mb-3">
    <label for="price" class="form-label">Price</label>
    <input
      type="text"
      class="form-control"
      id="price"
      name="price"
      value="<%= product.price %>"
    />
  </div>
  <div class="mb-3">
    <label for="type" class="form-label">Type</label>
    <input
      type="text"
      class="form-control"
      id="type"
      name="type"
      value="<%= product.type %>"
    />
  </div>
  <button class="btn btn-info" type="submit">Update Product</button>
</form>
